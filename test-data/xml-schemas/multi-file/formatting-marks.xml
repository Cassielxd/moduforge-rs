<?xml version="1.0" encoding="UTF-8"?>
<!-- 格式化标记定义 -->
<schema>
  <marks>
    <!-- 粗体标记 -->
    <mark name="strong" group="formatting">
      <desc>粗体文本标记</desc>
      <spanning>true</spanning>
      <attrs>
        <attr name="weight" default="bold"/>
      </attrs>
    </mark>
    
    <!-- 斜体标记 -->
    <mark name="em" group="formatting">
      <desc>斜体文本标记</desc>
      <spanning>true</spanning>
    </mark>
    
    <!-- 下划线标记 -->
    <mark name="underline" group="formatting">
      <desc>下划线文本标记</desc>
      <spanning>true</spanning>
      <attrs>
        <attr name="style" default="solid"/>
      </attrs>
    </mark>
    
    <!-- 删除线标记 -->
    <mark name="strikethrough" group="formatting">
      <desc>删除线文本标记</desc>
      <spanning>true</spanning>
    </mark>
  </marks>
</schema>
