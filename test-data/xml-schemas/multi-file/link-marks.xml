<?xml version="1.0" encoding="UTF-8"?>
<!-- 链接标记定义 -->
<schema>
  <marks>
    <!-- 链接标记 -->
    <mark name="link" group="link">
      <desc>超链接标记</desc>
      <spanning>false</spanning>
      <attrs>
        <attr name="href"/>
        <attr name="title"/>
        <attr name="target" default="_self"/>
      </attrs>
    </mark>
    
    <!-- 代码标记 -->
    <mark name="code" group="formatting">
      <desc>内联代码标记</desc>
      <spanning>true</spanning>
      <excludes>strong em</excludes>
      <attrs>
        <attr name="language"/>
      </attrs>
    </mark>
  </marks>
</schema>
